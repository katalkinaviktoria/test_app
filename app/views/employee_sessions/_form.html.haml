= form_for @employee_session do |f|
  - if @employee_session.errors.any?
    #error_explanation
      %h2= "#{pluralize(@employee_session.errors.count, "error")} prohibited this employee_session from being saved:"
      %ul
        - @employee_session.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :id_employee
    = f.number_field :id_employee
  .field
    = f.label :workday
    = f.date_select :workday
  .field
    = f.label :id_system
    = f.number_field :id_system
  .field
    = f.label :entrytime
    = f.time_select :entrytime
  .field
    = f.label :exittime
    = f.time_select :exittime
  .actions
    = f.submit 'Save'
